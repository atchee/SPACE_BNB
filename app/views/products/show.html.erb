<%# <img carrousel> %>
<div class="container">
  <div>
    <%= @product.name %>
    <%= @product.capacity %>
    <%= @product.place %>
  </div>

  <div>
    <%= @product.price %>
    <%# calendier des disponibilitÃ©s%>
  </div>

  <%= link_to "Edit", edit_product_path(@product.id) %>
  <%= link_to "Delete your #{@product.genre.name}", product_path(@product), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  <%= link_to "Back to all the products", products_path %>

  <%= simple_form_for [@product, @rental] do |f| %>
  <%= f.input :arrival_date %>
  <%= f.input :departure_date %>
  <%= f.submit %>
  <% end %>
</div>
