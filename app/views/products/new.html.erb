<div class="container">
  <%= simple_form_for @product do |f| %>
  <%= f.input :name %>
  <%= f.input :capacity %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :place %>
  <%= f.association :genre, collection: Genre.all.order(:name), prompt: "Choose a genre" %>
  <%= f.submit %>
  <% end %>

</div>
